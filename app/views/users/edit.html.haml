%h2 Edit Account

.black-text
  = form_for @user do |f|
    = f.label :username
    = f.text_field :username
    %br
    = f.label :name
    = f.text_field :name
    %br
    = f.label :email
    = f.text_field :email
    %br
    = f.label :password
    = f.password_field :password
    %br
    = f.submit "Update Account"
